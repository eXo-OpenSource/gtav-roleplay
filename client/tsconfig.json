{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./node_modules/@altv"],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "outDir": "build",
  },
  "exclude": [
    "node_modules",
    "cef"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
